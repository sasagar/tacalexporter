{
	"name": "TAcalExporter",
	"version": "3.7.1",
	"description": "TechAcademy用メンタースケジュール登録アプリ",
	"standard": {
		"globals": ["$"]
	},
	"build": {
		"appId": "com.kent-and-co.tacalexporter",
		"mac": {
			"target": "dmg"
		},
		"directories": {
			"output": "../dist"
		},
		"files": ["!dist"]
	},
	"main": "main.js",
	"scripts": {
		"start": "node_modules/.bin/electron .",

		"clean": "rm -rf ../dist",
		"clean:osx": "rm -rf ../dist/darwin",
		"clean:win": "rm -rf ../dist/darwin/win-unpacked",

		"pack": "npm run pack:osx && npm run build:win",
		"pack:osx":
			"npm run clean:osx && electron-packager . TAcalExporter --out=../dist/darwin --platform=darwin --arch=x64 --version=2.0.0 --icon=build/icon.icns",
		"pack:win":
			"npm run clean:win && electron-packager . TAcalExporter --out=../dist/darwin --platform=win32 --arch=ia32 --version=2.0.0 --icon=build/icon.ico",

		"build": "npm run build:osx && npm run build:win",
		"build:osx":
			"npm run clean:osx && electron-builder '../dist/darwin/TAcalExporter-darwin-x64/TAcalExporter.app' --platform=mac --config=builder.json --publish=always",
		"build:win":
			"npm run clean:win && electron-builder '../dist/darwin/TAcalExporter-win32-x64' --platform=win --config=builder.json --publish=always",

		"archive": "npm run archive:osx && npm run archive:win",
		"archive:osx":
			"npm run build:osx && zip -j '../dist/darwin/TAcalExporter-osx.zip' '../dist/darwin/TAcalExporter.dmg'",
		"archive:win":
			"npm run build:win && zip -j '../dist/darwin/TAcalExporter-win.zip' '../dist/darwin/TAcalExporter.exe'",

		"make:mac":
			"electron-packager . TAcalExporter --platform=darwin --arch=x64 --electron-version=2.0.0 --icon=build/icon.icns --overwrite",
		"make:win":
			"electron-packager . TAcalExporter --platform=win32 --arch=x64 --electron-version=2.0.0 --icon=build/icon.ico --overwrite"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/sasagar/tacalexporter.git"
	},
	"author": "SASAGAWA, Kiyoshi",
	"license": "GPL-3.0",
	"dependencies": {
		"about-window": "^1.11.0",
		"ajv": "^6.4.0",
		"bootstrap": "^4.1.1",
		"electron-config": "^1.0.0",
		"electron-gh-releases": "^2.0.4",
		"electron-json-storage": "^4.1.0",
		"font-awesome": "^4.7.0",
		"gasparesganga-jquery-loading-overlay": "^2.1.2",
		"googleapis": "^29.0.0",
		"jquery": "^3.3.1",
		"jquery-ui": "^1.12.1",
		"npm-lifecycle": "^2.0.1",
		"path": "^0.12.7",
		"popper.js": "^1.14.3"
	},
	"devDependencies": {
		"electron": "^2.0.0",
		"electron-builder": "^20.11.1",
		"electron-packager": "^12.0.2",
		"electron-prebuilt": "^1.4.13"
	}
}
