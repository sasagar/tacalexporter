{
	"name": "TAcalExporter",
	"version": "4.5.1",
	"description": "TechAcademy用メンタースケジュール登録アプリ",
	"standard": {
		"globals": [
			"$"
		]
	},
	"build": {
		"appId": "com.kent-and-co.tacalexporter",
		"mac": {
			"target": "zip",
			"icon": "build/icon.icns"
		},
		"win": {
			"target": {
				"target": "nsis",
				"arch": [
					"x64",
					"ia32"
				]
			},
			"icon": "build/icon.ico"
		},
		"publish": [
			{
				"provider": "github",
				"releaseType": "release",
				"owner": "sasagar",
				"publishAutoUpdate": "true"
			}
		],
		"directories": {
			"output": "../dist"
		},
		"electronVersion": "2.0.0"
	},
	"main": "main.js",
	"scripts": {
		"start": "node_modules/.bin/electron .",
		"release": "build -mw",
		"clean": "rm -rf ../dist",
		"clean:osx": "rm -rf ../dist/darwin",
		"clean:win": "rm -rf ../dist/darwin/win-unpacked",
		"pack": "npm run pack:osx && npm run pack:win",
		"pack:osx": "npm run clean:osx && electron-packager . TAcalExporter --out=../dist/darwin --platform=darwin --arch=x64 --version=2.0.0 --icon=build/icon.icns",
		"pack:win": "npm run clean:win && electron-packager . TAcalExporter --out=../dist/darwin --platform=win32 --arch=ia32 --version=2.0.0 --icon=build/icon.ico",
		"build": "npm run build:osx && npm run build:win",
		"build:osx": "npm run clean:osx && electron-builder '../dist/darwin/TAcalExporter-darwin-x64/TAcalExporter.app' --platform=mac --config=builder.json",
		"build:win": "npm run clean:win && electron-builder '../dist/darwin/TAcalExporter-win32-x64' --platform=win --config=builder.json",
		"archive": "npm run archive:osx && npm run archive:win",
		"archive:osx": "npm run build:osx && zip -j '../dist/darwin/TAcalExporter-osx.zip' '../dist/darwin/TAcalExporter.dmg'",
		"archive:win": "npm run build:win && zip -j '../dist/darwin/TAcalExporter-win.zip' '../dist/darwin/TAcalExporter.exe'",
		"make:mac": "electron-packager . TAcalExporter --platform=darwin --arch=x64 --electron-version=2.0.0 --icon=build/icon.icns --overwrite",
		"make:win": "electron-packager . TAcalExporter --platform=win32 --arch=x64 --electron-version=2.0.0 --icon=build/icon.ico --overwrite"
	},
	"repository": "github:sasagar/tacalexporter",
	"author": "SASAGAWA, Kiyoshi",
	"license": "GPL-3.0",
	"dependencies": {
		"about-window": "^1.12.1",
		"ajv": "^6.6.2",
		"bootstrap": "^4.1.3",
		"electron-config": "^2.0.0",
		"electron-json-storage": "^4.1.5",
		"electron-updater": "^4.0.6",
		"font-awesome": "^4.7.0",
		"gasparesganga-jquery-loading-overlay": "^2.1.6",
		"googleapis": "^36.0.0",
		"hoek": "^6.1.2",
		"jquery": "^3.3.1",
		"jquery-ui": "^1.12.1",
		"npm-lifecycle": "^2.1.0",
		"path": "^0.12.7",
		"popper.js": "^1.14.6",
		"update-electron-app": "^1.3.0"
	},
	"devDependencies": {
		"electron": "^3.0.13",
		"electron-builder": "^20.38.3",
		"electron-packager": "^13.0.1"
	}
}
